# OpenAI API key (required for itinerary generation)
# Get your key at https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-actual-key

# Supabase (for share links)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Kakao JavaScript SDK (for KakaoTalk share)
NEXT_PUBLIC_KAKAO_JAVASCRIPT_KEY=your-kakao-js-key
# Optional: set SDK version and integrity if you want to pin and verify the script.
NEXT_PUBLIC_KAKAO_SDK_VERSION=2.7.9
NEXT_PUBLIC_KAKAO_SDK_INTEGRITY=

# Google Maps Geocoding API (optional, improves map accuracy)
GOOGLE_MAPS_API_KEY=

# Google Maps JavaScript API (for map rendering)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Share link TTL (days)
SHARE_TTL_DAYS=30
